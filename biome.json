{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true,
    "include": ["**/*.ts", "**/*.js"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "include": [
      "**/*.ts",
      "**/*.json",
      "**/*.js",
      "**/*.mjs",
      "**/*.md",
      "**/*.html"
    ],
    "ignore": ["dist/**", "node_modules/**", "coverage/**", "**/generated/**"]
  }
}
